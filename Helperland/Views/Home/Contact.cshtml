    <a class="navbar-brand" href="index.html">
      <img src="~/image/logo-small.png" alt="">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
         <li class="nav-item text-center color-border color ms-xl-3  mt-xl-0 mt-2 ">
          <a class="nav-link text-light" aria-current="page" asp-controller="Home" asp-action="#">Book now</a>
        </li>
        <li class="nav-item text-center color-border ms-xl-3  mt-xl-0 mt-2 ">
          <a class="nav-link text-light" aria-current="page"  asp-controller="Home" asp-action="Prices">Prices & Services</a>
        </li>
        <li class="nav-item text-center ms-xl-3  mt-xl-0 mt-2 ">
          <a class="nav-link text-light" aria-current="page" asp-controller="Home" asp-action="#">Guarantee</a>
        </li>
        <li class="nav-item text-center ms-xl-3  mt-xl-0 mt-2 ">
          <a class="nav-link text-light" aria-current="page" asp-controller="Home" asp-action="#">Blog</a>
        </li>
        <li class="nav-item text-center ms-xl-3  mt-xl-0 mt-2 ">
          <a class="nav-link text-light" aria-current="page" asp-controller="Home" asp-action="Contact">Contact</a>
        </li>
        <li class="nav-item text-center color-border color ms-xl-3  mt-xl-0 mt-2 ">
          <a class="nav-link text-light" data-bs-toggle="modal" href="#exampleModalToggle" role="button">Login</a>
        </li>
        <li class="nav-item text-center color-border color ms-xl-3  mt-xl-0 mt-2 ">
          <a class="nav-link text-light" aria-current="page" asp-controller="Home" asp-action="ServiceProvider">Become a Helper</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
</div>

<!-- Login Regestration  page-->  
<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    @Html.Partial("Login")
</div>



<!--MAIN BODY-->
  <img class="image-fluid price-image"src="~/image/contact.png">
<section class="container body pt-3 d-flex flex-column align-items-center">
  <h1 class="h1-title">Contact Us</h1>
  <div class="d-flex align-items-center pb-3">
    <div class="separator-border me-2"></div>
    <img src="~/image/separator.png">
    <div class="separator-border ms-2"></div>
  </div>
</section>
<div class="container d-flex gx-5 flex-wrap flex-row flex-xl-nowrap justify-content-around align-items-center">
  <div class="d-flex flex-column align-items-center pb-3">
    <div>
      <img src="~/image/grid-6.1.png">
    </div>
    <span class="text-center grid-p">1111 Lorem ipsum text 100,</span> 
    <span class="text-center grid-p">Lorem ipsum AB</span >
  </div>
  <div class="d-flex flex-column align-items-center pb-3">
    <div >
      <img src="~/image/grid-6.2.png">
    </div>
    <span class="text-center grid-p">+49 (40) 123 56 7890</span>
    <span class="text-center grid-p">+49 (40) 987 56 0000</span>
  </div>
  <div class="d-flex flex-column align-items-center pb-3">
    <div>
      <img src="~/image/grid-6.3.png">
    </div>
   <span class=" mail-p ">info@helperland.com</span>
  </div>
</div>
<div class="line mt-5"></div>
<section class="mt-5">
@using (Html.BeginForm("Contact", "Home", FormMethod.Post)){
<div asp-action="Contact" method="post">
  <div>
    <h2 class="h2-title text-center pb-3">Get in touch with us</h2>
  </div>
  <div class="container text-center">
      <input asp-for="Name" class="first-name px-2 py-2 mb-2" type="text" placeholder="First Name"><input asp-for="Name" class="last-name px-2 py-2" type="text" placeholder="Last Name">
  </div>
  <div class="container text-center mt-3">
    <span class="country-code">+49</span><input asp-for="PhoneNumber" class="mobile-number px-2 py-2 mb-2" type="number" placeholder="Mobile Number"><input asp-for="Email" class="last-name px-2 py-2" type="text" placeholder="Email Address">
  </div>
  <div class="container text-center mt-3">
    <input asp-for="Subject" class="subject px-2 py-2" type="text" placeholder="Subject">
  </div>
  <div class="container text-center mt-3">
    <input asp-for="Message" class="message px-2" type="text" placeholder="Mesaage">
  </div>

  <div class="container mt-3 text-left part-attachment justify-content-center align-items-center">
        <label class="attachment">Attachment</label>
        <label class="upload" asp-controller="Home" asp-action="SingleFile" enctype="multipart/form-data" method="post">
             <input type="file" name="file">Upload
        </label>
    <label><input type="checkbox"></label><span class="paragraph">Our current privacy policyapplies. I hereby agree that my data entered in the contact form will be stored electronically and processed and used for the purpose of establishing contact. The consent can be revoked at any time in accordance with Art. 7 para. 3 GDPR by informal notification (e.B. by e-mail).</span>
    <div class="text-center mt-3 pb-5">
      <button type="submit" class="submit text-center">Submit</button>
    </div>
  </div>
</div>
}


<div class="pb-5">
  <img class="background-map-image"src="~/image/map.png"><img class="location-pin pt-5 "src="~/image/location-pin.png">
</div>
</section>
<!--FOOTER-->

<div class="footer container-fluid d-flex flex-column pb-5 mt-5">
  <div class="pt-5 footer-news-letter d-flex flex-column justify-content-center">
    <h6 class="news-letter pb-2 text-center">GET OUR NEWSLETTER</h6>
    <div class="d-flex flex-wrap justify-content-center gap-4">
      <input class="email-input py-2" type="email" placeholder="YOUR EMAIL">
      <div class="submit-newsletter">Submit</div>
    </div>
  </div>
</div>


