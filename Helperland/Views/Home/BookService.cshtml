                  <div class="grid-1 container-fluid w-100 d-flex ps-0 ms-0 pe-0 me-0 mt-4 pb-3 flex-wrap flex-xl-nowrap justify-content-around flex-row">
                    <div class="d-flex flex-column align-items-center">
                      <div class="circle align-items-center d-flex">
                        <img src="~/image/grid-4.1.png">
                      </div>
                      <p class="text-center grid-p pt-2">Inside cabinets</p>                      
                    </div>
                    <div class="d-flex flex-column align-items-center">
                      <div class="circle align-items-center d-flex">
                        <img src="~/image/grid-4.2.png">
                      </div>
                      <p class="text-center grid-p pt-2">Inside fridge</p>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                      <div class="circle align-items-center d-flex">
                        <img src="~/image/grid-4.3.png">
                      </div>
                      <p class="text-center grid-p pt-2">Inside oven</p>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                      <div class="circle align-items-center d-flex">
                        <img src="~/image/grid-4.4.png">
                      </div>
                      <p class="text-center grid-p pt-2">Laundry wash & dry</p>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                      <div class="circle align-items-center d-flex">
                        <img src="~/image/grid-4.5.png">
                      </div>
                      <p class="text-center grid-p pt-2">Interior windows</p>
                    </div>
                  </div>
                  <div class="separator-border mb-3"></div>
                    <p class="text-1">Comments</p>
                    <input type="text" class="w-100 pb-3 mb-2">
                    <label><input type="checkbox"></label><span class="text-1 fw-nonw">I have pets at my place.</span>
                  <div class="separator-border mb-3 mt-3"></div>
                    <div class="text-center  mt-3 pb-5">
                      <button class="submit text-center" onclick="gotoaddress()">Continue</button>
                    </div>
                </div>
                <div class="tab-pane fade mt-3" id="YourDetails">
                  <p class="text-1">Enter your contact details, so we can serve you in better way!</p>
                  <div class="mt-3 mb-3" id="address">
                    <button class="new-address p-2" onclick="display()">+ Add new address</button>
                  </div>
                  @Html.Partial("Details")
                  <p class="text-1">Your favourite service providers </p>
                  <div class="separator-border mt-2 mb-2"></div>
                  <p>You can choose your favourite service provider from below list.</p>
                  <div class="separator-border"></div>
                  <div class="text-center  mt-3 pb-5">
                     <button class="submit text-center" onclick="gotopay()">Continue</button>
                  </div>
                </div>
                <div class="tab-pane fade" id="MakePayment">
                  <p  class="text-1 mt-3 mb-2 ">Pay securely with Helperland Payment Getway!</p>
                  <p>Promo Code (optional)</p>
