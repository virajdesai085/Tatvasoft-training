                      <option value="1">2 Bed</option>
                      <option value="2">3 Bed</option>
                      <option value="3">4 Bed</option>
                    </select>
                    <select class="bed-bath">
                      <option selected>1 Bath</option>
                      <option value="1">2 Bath</option>
                      <option value="2">3 Bath</option>
                      <option value="3">4 Bath</option>
                    </select>
                  </span>
                  <div class="separator-border"></div>
                    <div class="text-1 pb-3 me-5 fw-bold mt-3">When do you need a cleaner?</div>
                      <label class="calender pt-1 ps-2"><img class="pe-2" src="~/image/blue-calender.png">13/02/2022</label>
