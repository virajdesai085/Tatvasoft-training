<section>
  <div class="container b">
    <div class="row ms-0">
      <div class="col-12">
        <div class="row">
                <!--left side part-->
          <div class="col-md-8 col-12">
            <div class="tabs left-part">
              <ul class="nav nav-tabs nav-pills nav-fill w-100 me-0 pe-0">
                <li class="nav-item nav-flex">
                  <a class="nav-link active" id="ss" data-bs-toggle="pill" href="#Setupservice"><img class="image-fluid im" src="~/image/setup-service.png">Setup Service</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="sp1" data-bs-toggle="pill" href="#SchedulePlan"><img class="image-fluid im" src="~/image/schedule-plan.png">Schedule & Plan</a>
