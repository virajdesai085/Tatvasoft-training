<!-- Login Regestration  page-->  
<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    @Html.Partial("Login")
</div>

@using (Html.BeginForm("ForgetPassword" , "Home" , FormMethod.Post))
{
  <div asp-action="ForgetPassword" method="Post" class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalToggleLabel2">Forget Password</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-2">
            <input type="email" asp-for="Email" class="form-control" id="exampleInputPassword2" placeholder="Email id">
          </div>
          <button type="submit" class="Log-in w-100">Send</button>
        </form>
      </div>
      <div class="modal-footer">
        <label  class="text-center w-100 color-gradiant">Login Now</label>
      </div>
    </div>
  </div>
</div>
}


@using (Html.BeginForm("CreateAccount" , "Home" , FormMethod.Post))
{
  <div asp-action="CreateAccount" method="Post" >
    <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header d-flex flex-column">
        <div class="w-100 d-flex align-items-center justify-content-center">
          <h2>Create New Account</h2>
        </div>
        <div class="d-flex align-items-center">
          <div class="separator-border me-2"></div>
          <img src="image/separator.png">
          <div class="separator-border ms-2"></div>
        </div>
      </div>
      <div class="modal-body">
        <div class="row mb-3">
          <div class="col">
            <input type="text" asp-for="FirstName" class="form-control" placeholder="First name" aria-label="First name">
          </div>
          <div class="col">
            <input type="text" asp-for="LastName" class="form-control" placeholder="Last name" aria-label="Last name">
          </div>
        </div>
        <div class="row mb-3">
          <div class="col">
            <input type="text" asp-for="Email" class="form-control" placeholder=" Email Address" aria-label="Email Address">
          </div>
          <div class="col">
            <div class="input-group flex-nowrap">
              <span class="input-group-text ps-1 pe-1" id="addon-wrapping">+49</span>
              <input type="text" asp-for="Mobile" class="form-control ps-1" placeholder="Mobile Number" aria-label="Username" aria-describedby="addon-wrapping">
            </div>
          </div>
        </div> 
        <div class="row">
          <div class="col">
            <input type="password" asp-for="Password" class="form-control" placeholder="Password" aria-label="Password">
          </div>
          <div class="col">
            <input type="password" class="form-control" placeholder="Confirm Password" aria-label="Confirm Password">
          </div>
        </div> 
        <div class="mt-2 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Remember me</label>
        </div>
        <div class="d-flex align-items-center justify-content-center pt-2">
          <button type="submit" class="Log-in pt-2 ps-3 pe-3 pb-2">Register</button>
        </div>
      </div>
      <div class="modal-footer w-100 align-items-center justify-content-center">
        <label>Already registered? <span class="color-gradiant" data-bs-toggle="modal" href="#exampleModalToggle">Login now</span></label>
      </div>
    </div>
  </div>
</div>
}
