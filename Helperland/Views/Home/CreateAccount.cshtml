@using (Html.BeginForm("CreateAccount" , "Home" ,FormMethod.Post))
{
<div class="modal-dialog modal-dialog-centered" asp-action="CreateAccount">
    <div class="modal-content">
      <div class="modal-header d-flex flex-column">
        <div class="w-100 d-flex align-items-center justify-content-center">
          <h2>Create New Account</h2>
        </div>
        <div class="d-flex align-items-center">
          <div class="separator-border me-2"></div>
          <img src="~/image/separator.png">
          <div class="separator-border ms-2"></div>
        </div>
      </div>
      <div class="modal-body">
        <div class="row mb-3">
          <div class="col">
            <input asp-for="FirstName" type="text" class="form-control" placeholder="First name" aria-label="First name"><br>
            <span class="text-danger" asp-validation-for="FirstName"></span>
          </div>
          <div class="col">
            <input asp-for="LastName" type="text" class="form-control" placeholder="Last name" aria-label="Last name"><br>
            <span class="text-danger" asp-validation-for="LastName"></span>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col">
            <input asp-for="Email" type="text" class="form-control" placeholder=" Email Address" aria-label="Email Address"><br>
            <span class="text-danger" asp-validation-for="Email"></span>
          </div>
          <div class="col">
            <div class="input-group flex-nowrap">
              <span class="input-group-text ps-1 pe-1" id="addon-wrapping">+49</span>
              <input asp-for="Mobile" type="text" class="form-control ps-1" placeholder="Mobile Number" aria-label="Username" aria-describedby="addon-wrapping">
            </div>
            <span class="text-danger" asp-validation-for="Mobile"></span>
          </div>
        </div> 
        <div class="row">
          <div class="col">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Password"><br>
            <span class="text-danger" asp-validation-for="Password"></span>
          </div>
          <div class="col">
            <input asp-for="Password" type="password" class="form-control" placeholder="Confirm Password" aria-label="Confirm Password"><br>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
          </div>
        </div> 
        <div class="mt-2 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Remember me</label>
        </div>
        <div class="d-flex align-items-center justify-content-center pt-2">
          <button type="submit" class="Log-in pt-2 ps-3 pe-3 pb-2">Register</button>
        </div>
      </div>
      <div class="modal-footer w-100 align-items-center justify-content-center">
        <label>Already registered? <span class="color-gradiant">Login now</span></label>
      </div>
    </div>
  </div>
}

