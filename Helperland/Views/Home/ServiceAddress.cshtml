@using Helperland_projectContext.Models
@model IEnumerable<UserAddress>
@{
    ViewData["Title"] = "address";
    Layout = null;
}
<p class="text-1">Enter your contact details, so we can serve you in better way!</p>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="align-middle mb-3">
            <div class="address-form">
                <input class="form-check-input ms-3 mt-3 me-2 address-checkbox" type="radio" value="@item.AddressId" name="inlineRadioOptions" id="inlineRadio1">
                <label class="form-check-label pt-2" id="list" for="inlineRadio1">
                    address: @Html.DisplayFor(modelItem => item.AddressLine1),@Html.DisplayFor(modelItem => item.AddressLine2),@Html.DisplayFor(modelItem => item.City),@Html.DisplayFor(modelItem => item.PostalCode)<br> 
                    mobile: @Html.DisplayFor(modelItem => item.Mobile)
                </label>
            </div>
        </div>
    }
}                
<div class="mt-3 mb-3" id="address">
                    <button class="new-address p-2" onclick="display()">+ Add new address</button>
                  </div>
                  <div class="d-none" id="form" >
                    <form class="form ps-3 pt-3 mb-3" >
                      <div class="d-flex flex-xl-nowrap flex-row w-100">
                        <div class="d-flex flex-xl-nowrap flex-column w-100">
                          <span class="mb-3">
                            <label class="form-label">Street Name</label>
                            <div class="col-sm-5 w-100">
                              <input type="text" id="line2" class="form-control" placeholder="Street Name" required minlength="5">
                            </div>
                          </span>
                          <span class="mb-3">
                            <label class="form-label">Postal code</label>
                            <div class="col-sm-5 w-100">
                              <input type="text" id="Postalcode" class="form-control" placeholder="Postal code">
                            </div>
                          </span>
                          <span class="mb-3">
                            <label class="form-label">Mobile number</label>
                            <div class="input-group col-sm-5 w-100">
                              <span class="input-group-text" id="basic-addon1">+49</span>
                              <input type="text" id="mobile" class="form-control" placeholder="Mobile number">
                            </div>
                          </span>
                        </div>
                        <div class="d-flex flex-xl-nowrap flex-column w-100 me-3 ms-3">
                          <span class="mb-3">
                            <label class="form-label">House Number</label>
                            <div class="col-sm-5 w-100">
                              <input type="text" id="line1" class="form-control" placeholder="House Number" required minlength="3">
                            </div>
                          </span>
                          <span class="mb-3">
                            <label class="form-label">City</label>
                            <div class="col-sm-5 w-100">
                              <input type="text" id="city" class="form-control" placeholder="City" required minlength="3">
                            </div>
                          </span>
                        </div>
                      </div>
                      <button class="save text-center mb-3" id="save" type="button" >Save</button>
                      <button type="reset" class="cancel text-center">Cancel</button>
                    </form>
                  </div>
                  <p class="text-1">Your favourite service providers </p>
                  <div class="separator-border mt-2 mb-2"></div>
                  <p>You can choose your favourite service provider from below list.</p>

                  <div class="separator-border"></div>
                  <div class="text-center  mt-3 pb-5">
                      <button class="submit text-center" onclick="gotopay()">Continue</button>
                   </div>                 

<script src="~/js/Bookservice.js"></script>
