    <h1 class="h1-title pt-2 pb-2">Register Now!</h1>
    <div>
      <input asp-for="FirstName" class="border-box form-font-color" type="text" placeholder="First Name"><br>
      <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div>
      <input asp-for="LastName" class="border-box form-font-color" type="text" placeholder="Last Name"><br>
      <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div>
      <input asp-for="Email" class="border-box form-font-color" type="email" placeholder="Email Address"><br>
      <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div>
       <label class=" align-items-center country-code">+49</label><input asp-for="Mobile" class="number-box form-font-color align-items-center" type="number" placeholder="Mobile Number "><br>
        <span class="text-danger" asp-validation-for="Mobile"></span>
    </div>
    <div>
       <input asp-for="Password" type="password" class="border-box form-font-color" placeholder="Password" id="exampleInputPassword1"><br>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div>
      <input asp-for="Password" type="password" class="border-box form-font-color" placeholder="Confirm Password" id="exampleInputPassword1"><br>
      <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <input class="form-check-input mb-2" type="checkbox" value=""><span class="checkbox-text ps-2 pe-1 me-5">Send me newsletters from Helperland</span>
    <input class="form-check-input mb-2" type="checkbox" value=""><span class="checkbox-text ps-2 pe-1 ">I accept <span class="tc-color">terms and conditions</span> & <span class="tc-color">privacy policy</span></span>
    <img class="pe-5 me-2 pb-3" src="~/image/captcha.png">
    <button type="submit" class="active-form text-light">Get Started <img src="~/image/white-arrow.png"></button>
  </div>
</section>
}
