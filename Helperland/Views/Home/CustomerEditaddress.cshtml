@model Helperland_projectContext.Models.UserAddress

    <input type="hidden" id="id" asp-for="AddressId">
        <div>
           <span class="modal-title" id="exampleModalLabel">Edit Address</span>
           <button type="button" class="btn-close x" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form class="form ps-3 pt-3 mb-3" id="Editform">

        <div class="d-flex flex-xl-nowrap flex-row w-100">
        <div class="d-flex flex-xl-nowrap flex-column w-100">
            <span class="mb-3">
            <label class="form-label row-head">Street Name</label>
            <div class="col-sm-5 w-100">
                <input type="text" id="line2" asp-for="AddressLine2"  class="form-control" placeholder="Street Name">
            </div>
            </span>
            <span class="mb-3">
            <label class="form-label row-head">Postal code</label>
            <div class="col-sm-5 w-100">
                <input type="text" id="pin" asp-for="PostalCode" class="form-control" placeholder="Postal code">
            </div>
            </span>
            <span class="mb-3">
            <label class="form-label row-head">Mobile number</label>
            <div class="input-group col-sm-5 w-100">
                <span class="input-group-text" id="basic-addon1">+49</span>
                <input type="text" id="mobile1" asp-for="Mobile" class="form-control" placeholder="Mobile number">
            </div>
            </span>
        </div>
        <div class="d-flex flex-xl-nowrap flex-column w-100 me-3 ms-3">
            <span class="mb-3">
            <label class="form-label row-head">House Number</label>
            <div class="col-sm-5 w-100">
                <input type="text" id="line1" asp-for="AddressLine1" class="form-control" placeholder="House Number">
            </div>
            </span>
            <span class="mb-3">
            <label class="form-label row-head">City</label>
            <div class="col-sm-5 w-100">
                <input type="text" id="city" asp-for="City"  class="form-control" placeholder="City">
            </div>
            </span>
        </div>
        </div>

        <button type="button" onclick="editAdd()" class="save text-center mb-3">Save</button>
    </form>
