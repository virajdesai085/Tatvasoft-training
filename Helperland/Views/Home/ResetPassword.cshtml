
@model Helperland_projectContext.Models.User
<link rel="stylesheet" href="~/css/ResetPassword.css" asp-append-version="true" />
@{
   ViewBag.Title = "Reset Password";
}
@using (Html.BeginForm("ResetPassword" , "Home" , FormMethod.Post))    
{
<div class="model-body reset-form">
    <h4>Reset Password</h4>
    <hr />
    <div class="text-danger">
        @ViewBag.Message
    </div>
    <input type="hidden" asp-for="UserId">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group mb-2">
       <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Password"><br><span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group mb-2">
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" aria-label="Password"><br><span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="form-group">
            <input type="submit" value="Save" class="Log-in w-100" />
    </div>
</div>
}
    
